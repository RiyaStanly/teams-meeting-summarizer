# Project Paths
PROJECT_ROOT=/path/to/teams-meeting-summarizer
DATA_DIR=data
MODELS_DIR=models
OUTPUTS_DIR=outputs

# Model Configuration
SUMMARIZATION_MODEL=facebook/bart-large-cnn
FINETUNED_MODEL_PATH=models/summarizer
NER_BACKEND=spacy  # Options: spacy, huggingface
SPACY_MODEL=en_core_web_sm
HF_NER_MODEL=dslim/bert-base-NER

# Training Hyperparameters
LEARNING_RATE=5e-5
BATCH_SIZE=2
GRADIENT_ACCUMULATION_STEPS=4
NUM_EPOCHS=3
MAX_INPUT_LENGTH=1024
MAX_TARGET_LENGTH=256
WARMUP_STEPS=100

# Inference Parameters
NUM_BEAMS=4
TEMPERATURE=1.0
TOP_P=0.95
DO_SAMPLE=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # Options: json, text
LOG_FILE=logs/app.log

# Cache
HF_HOME=.cache/huggingface
TRANSFORMERS_CACHE=.cache/transformers

# Azure Speech-to-Text
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus
AZURE_SPEECH_LANGUAGE=en-US
AZURE_SPEECH_ENABLE_DIARIZATION=true

# Microsoft Teams Integration
TEAMS_CLIENT_ID=your_teams_client_id
TEAMS_CLIENT_SECRET=your_teams_client_secret
TEAMS_TENANT_ID=your_tenant_id
TEAMS_REDIRECT_URI=http://localhost:8000/auth/callback

# Real-time Streaming
STREAMING_BUFFER_SIZE=500
STREAMING_OVERLAP=50
STREAMING_CHUNK_DURATION=30
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
SESSION_TIMEOUT=7200
